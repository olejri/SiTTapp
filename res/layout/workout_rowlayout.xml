<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="60dp" android:background="@color/planrow_main">
	<ImageView android:src="@drawable/icon" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:id="@+id/workrow_icon" android:layout_width="60dp" android:layout_height="60dp"></ImageView>
	<LinearLayout android:layout_width="wrap_content" android:id="@+id/workrow_textlayout" android:orientation="vertical" android:layout_toRightOf="@+id/workrow_icon" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_alignBottom="@+id/workrow_icon" android:weightSum="1" android:layout_height="60dp">
		<RelativeLayout android:layout_width="match_parent" android:layout_weight="0.55" android:id="@+id/workrow_toptexts" android:layout_height="20dp">
			<TextView android:layout_width="wrap_content" android:id="@+id/workrow_days" android:layout_height="wrap_content" android:text="MAN, TUE, FRI" android:layout_alignBaseline="@+id/workrow_clock" android:layout_alignBottom="@+id/workrow_clock" android:layout_alignParentLeft="true" android:textColor="@color/black"></TextView>
			<TextView android:layout_width="wrap_content" android:id="@+id/workrow_clock" android:layout_height="wrap_content" android:text="07:00" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginRight="15dp" android:textColor="@color/black"></TextView>
		</RelativeLayout>
		<TextView android:text="Benkpress, Arnold Curl" android:layout_width="match_parent" android:id="@+id/workrow_what" android:textColor="@color/black" android:layout_height="40dp"></TextView>
	</LinearLayout>
</RelativeLayout>